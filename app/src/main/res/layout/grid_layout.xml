<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:columnCount="4">
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnSpan="4"
        android:layout_columnWeight="4"
        android:layout_rowWeight="2"
        />
    <Button
        android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:textSize="24sp" android:text="C"/>
    <Button android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:textSize="24sp" android:text="+/-"/>
    <Button android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:textSize="24sp" android:text="%"/>
    <Button android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:textSize="24sp" android:text="รท"/>

    <Button
        android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:text="7" android:textSize="24sp"/>
    <Button android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:text="8" android:textSize="24sp"/>
    <Button android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:text="9" android:textSize="24sp"/>
    <Button android:layout_columnWeight="1" android:layout_rowWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:text="X" android:textSize="24sp"/>

    <Button android:text="4" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp"/>
    <Button android:text="5" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp"/>
    <Button android:text="6" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp"/>
    <Button android:text="-" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp"/>

    <Button android:text="1" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp"/>
    <Button android:text="2" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1"  android:textSize="24sp"/>
    <Button android:text="3" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1"  android:textSize="24sp"/>
    <Button android:text="+" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1"  android:textSize="24sp"/>

    <Button android:text="0" android:layout_columnWeight="1" android:layout_columnSpan="2"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp" />
    <Button android:text="." android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp"/>
    <Button android:text="=" android:layout_columnWeight="1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:layout_rowWeight="1" android:textSize="24sp"/>

</GridLayout>